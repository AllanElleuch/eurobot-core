{
  "name": "Eurobot-core",
  "version": "1.0.0",
  "description": "Nodejs core embedded on a linux board of our main robot for Eurobot Challenge",
  "scripts": {
    "start": "node build/src/main.js",
    "deploy": "sh scripts/deploy.sh",
