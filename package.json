  },
  "author": "Axel Mousset Aur√©lien Labate",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RobotikUTT/eurobot-core/issues"
  },
  "homepage": "https://github.com/RobotikUTT/eurobot-core",
  "dependencies": {
    "express": "^4.11.2",
    "i2c-bus": "^1.2.2",
    "native-promisify": "^1.2.0",
    "nconf": "^0.8.4",
    "node-static": "^0.7.6",
    "promise-queue": "^2.1.1",
    "socket.io": "^1.3.4",
    "tmx-parser": "^1.2.3",
    "winston": "^2.3.1",
    "serialport": "^2.1.2",
    "underscore": "^1.6.0"
  },
  "devDependencies": {
    "gulp": "^3.8.11",
    "gulp-babel": "^4.0.0",
    "gulp-nodemon": "^2.2.1",
    "gulp-plumber": "^1.1.0",
